{
    "name": "obsidian-alloy-mind",
    "version": "1.0.0",
    "description": "A utility plugin for Obsidian",
    "author": "Liam Bessell",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "bash scripts/build.sh",
        "build:deploy": "bash scripts/buildDeploy.sh",
        "prepare": "husky install",
        "lint": "eslint . --ext .ts --max-warnings 0",
        "test": "jest",
        "test:coverage": "jest --coverage --coveragePathIgnorePatterns src/test"
    },
    "keywords": [],
    "dependencies": {
        "@codemirror/state": "^6.0.0",
        "@codemirror/view": "^6.0.0",
        "axios": "^1.7.4",
        "localized-strings": "^0.2.4",
        "luxon": "^3.2.1"
    },
    "devDependencies": {
        "@babel/core": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@testing-library/jest-dom": "^6.4.6",
        "@types/jest": "^30.0.0",
        "@types/luxon": "^3.2.0",
        "@types/node": "^16.14.0",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "babel-jest": "^30.1.0",
        "builtin-modules": "3.3.0",
        "esbuild": "0.14.47",
        "eslint": "^8.34.0",
        "husky": "^8.0.0",
        "jest": "^30.1.0",
        "jest-environment-jsdom": "^30.1.0",
        "lint-staged": "^13.1.2",
        "obsidian": "^1.8.7",
        "prettier": "^2.8.4",
        "tslib": "2.4.0",
        "typescript": "^4.7.4"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --cache --fix",
            "prettier --write --ignore-unknown"
        ]
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-empty-function": "off"
        }
    },
    "jest": {
        "testEnvironment": "jsdom",
        "restoreMocks": true,
        "roots": [
            "src"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "moduleNameMapper": {
            "^obsidian$": "<rootDir>/src/test/mocks/mockObsidian.ts"
        }
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-typescript"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "arrowParens": "always",
        "semi": true,
        "trailingComma": "none",
        "printWidth": 120,
        "useTabs": false,
        "tabWidth": 4
    }
}
