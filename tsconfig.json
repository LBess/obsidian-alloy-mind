{
    "compilerOptions": {
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2021",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES2021"
        ]
    },
    "include": ["src"]
}
